<header class="container mx-auto py-20 flex w-full justify-between">
  {%- if settings.show_search -%}
    Search
  {%- endif -%}
  {%- if settings.show_cart -%}
    Cart
  {%- endif -%}
</header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_search",
      "default": true,
      "label": "t:sections.header.settings.show_search.label"
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "default": true,
      "label": "t:sections.header.settings.show_cart.label"
    }
  ]
}
{% endschema %}
